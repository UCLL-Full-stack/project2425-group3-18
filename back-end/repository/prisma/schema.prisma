generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comment {
  id        Int     @id @default(autoincrement())
  text      String
  postId    Int     
  profileId Int     
  post      Post    @relation(fields: [postId], references: [id])
  profile   Profile @relation(fields: [profileId], references: [id])
}

model Kot {
  id           Int       @id @default(autoincrement())
  price        Int
  surfaceSpace Int
  locationId   Int       @unique
  location     Location  @relation(fields: [locationId], references: [id])
  profiles     Profile[] @relation("KotToProfile")
}

model Location {
  id          Int    @id @default(autoincrement())
  city        String
  street      String
  housenumber Int
  Kot         Kot?
}

model Post {
  id          Int      @id @default(autoincrement())
  description String
  image       String
  profileId   Int?
  comments    Comment[]
  profile     Profile? @relation(fields: [profileId], references: [id])
}

model Profile {
  id        Int      @id @default(autoincrement())
  username String
  bio       String
  role      String
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  posts     Post[]
  comments  Comment[]
  koten     Kot[]    @relation("KotToProfile")
}

model User {
  id       Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email    String
  password String
  profile  Profile?
}
